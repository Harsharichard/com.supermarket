<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Testing" thread-count="5" parallel="tests">
	<listeners>
		<listener class-name="com.supermarket.listeners.ExtentReporter"></listener>
	</listeners>
	<test name="Run In Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.supermarket.testts.LoginTest"></class>
			
		</classes>
	</test>
	<test name="Run In Edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.supermarket.testts.LoginTest"></class>
		</classes>
	</test>
	<test name="Run In FireFox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.supermarket.testts.LoginTest"></class>
		</classes>
	</test>


</suite>